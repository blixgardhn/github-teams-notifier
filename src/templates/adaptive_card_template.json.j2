{
    "type": "message",
    "attachments": [
        {
            "contentType": "application/vnd.microsoft.card.adaptive",
            "content": {
                "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
                "type": "AdaptiveCard",
                "version": "1.4",
                "body": [
                    {
                        "type": "TextBlock",
                        "text": "Pull request - {{ repo_name }}",
                        "weight": "Bolder",
                        "size": "Large"
                    },
                    {
                        "type": "ColumnSet",
                        "columns": [
                            {
                                "type": "Column",
                                "items": [
                                    {
                                        "type": "Image",
                                        "style": "person",
                                        "url": "{{ user_avatar_url }}",
                                        "altText": "[{{ user_login }}]({{ user_url }})",
                                        "size": "small"
                                    }
                                ],
                                "width": "auto"
                            },
                            {
                                "type": "Column",
                                "items": [
                                    {
                                        "type": "TextBlock",
                                        "weight": "bolder",
                                        "text": "[{{ user_login }}]({{ user_url }})",
                                        "wrap": "True"
                                    },
                                    {
                                        "type": "TextBlock",
                                        "spacing": "none",
                                        "text": "{{ updated_at }}",
                                        "isSubtle": "True",
                                        "wrap": "True"
                                    }
                                ],
                                "width": "stretch"
                            }
                        ]
                    },
                    {
                        "type": "TextBlock",
                        "text": "{{ pr_title }}",
                        "weight": "Bolder",
                        "size": "Default",
                        "wrap": "True"
                    },
                    {
                        "type": "TextBlock",
                        "text": "{{ pr_body }}",
                        "wrap": "True"
                    }
                ],
                "actions": [
                    {
                        "type": "Action.OpenUrl",
                        "title": "View Pull Request",
                        "url": "{{ pr_url }}"
                    }
                ]
            }
        }
    ]
}
